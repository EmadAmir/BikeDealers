
@model IEnumerable<BikeDealers.Models.Make>


    @{
        ViewData["Title"] = "index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <br/><br/>

    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Makes of Vehicle</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-info" asp-action="Create">Add New Make</a>
        </div>  
        <br/>
        <div class="col-12">
            <table class="table table-striped border">
                <tr class="table-info">
                    <th>
                        @Html.DisplayNameFor(m=>m.Name) @** DisplayNameFor ==> Used to display the name of the property *@
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                { 
                    <tr>
                        <td>
                            @Html.DisplayFor(m=>item.Name)
                        </td>
                        <td class="text-right">Edit | Delete</td>
                    </tr>
                
                }
            </table>
        </div>
    </div>